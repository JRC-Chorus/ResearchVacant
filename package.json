{
  "name": "research_vacant",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "lint": "eslint --ext .js,.ts,.vue ./",
    "format": "prettier --write \"**/*.{js,ts,vue,scss,html,md,json}\" --ignore-path .gitignore",
    "configure": "yarn configure:clasp & yarn configure:aws & yarn configure:awsUrl",
    "configure:aws": "yarn workspace @research-vacant/proxy configure",
    "configure:awsUrl": "yarn deploy:aws & yarn workspace @research-vacant/backend configure:awsUrl",
    "configure:clasp": "yarn workspace @research-vacant/backend configure:claspID",
    "build": "rmdir dist /s /q & yarn build:frontend & yarn build:backend",
    "build:frontend": "yarn workspace @research-vacant/frontend build",
    "build:backend": "yarn workspace @research-vacant/backend build",
    "push": "yarn build:backend & yarn push:clasp",
    "push:clasp": "clasp push -f",
    "deploy": "yarn push & yarn deploy:clasp & yarn deploy:aws",
    "deploy:clasp": "yarn workspace @research-vacant/backend deploy",
    "deploy:aws": "yarn workspace @research-vacant/proxy deploy",
    "dev": "yarn workspace @research-vacant/frontend dev",
    "open": "clasp open --webapp",
    "test": "vitest"
  },
  "volta": {
    "node": "20.17.0",
    "npm": "10.8.3",
    "yarn": "1.22.22"
  }
}
